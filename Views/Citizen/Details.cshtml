@model Egov.Models.FinalView

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Citizen</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.MiddleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.MiddleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.CitizenshipNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.CitizenshipNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.CitizenF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.CitizenF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Citizen.CitizenB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Citizen.CitizenB)
        </dd>
    </dl>
</div>
<h3>Selected Coins</h3>
@if (Model.SelectedCoins != null && Model.SelectedCoins.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Coin Name</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coin in Model.SelectedCoins)
            {
                <tr>
                    <td>@coin.CoinName</td>
                    <td>@coin.Quantity</td>
                    <td>@coin.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No selected coins available.</p>
}
<div>
   
    <a asp-action="Index">Back to List</a>
</div>
